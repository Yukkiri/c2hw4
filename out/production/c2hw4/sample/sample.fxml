<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <TextArea fx:id="chat" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="670" prefHeight="450" editable="false" focusTraversable="false" />
    <TextField fx:id="message" GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="100" promptText="Input your message" onAction="#sendMessage" />
    <Button fx:id="send" GridPane.columnIndex="1" GridPane.rowIndex="1" text="Enter" prefHeight="100" prefWidth="100" onAction="#sendMessage"/>
</GridPane>